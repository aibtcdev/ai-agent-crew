entrypoint = "aibtc-v1/app.py"

run = "bash $HOME/ai-agent-crew/clarinet/setup-clarinet.sh && streamlit run aibtc-v1/app.py"

modules = ["python-3.11", "nodejs-18"]

hidden = [".pythonlibs", ".streamlit"]

[nix]
channel = "stable-24_05"

[env]
STREAMLIT_SERVER_HEADLESS = "true"

[deployment]
build = ["sh", "-c", "bash $PWD/clarinet/setup-clarinet.sh && cd $PWD/agent-tools-ts && npm install"]
run = ["sh", "-c", "streamlit --server.enableCORS=false --server.enableWebsocketCompression=false --server.runOnSave=false --client.toolbarMode=viewer run aibtc-v1/app.py"]
ignorePorts = false
deploymentTarget = "gce"

[[ports]]
localPort = 8501
externalPort = 80
